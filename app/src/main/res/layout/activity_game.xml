<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- 主游戏内容区域（SDLSurface + ControlLayout） -->
    <FrameLayout
        android:id="@+id/game_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <!-- 游戏控制布局会动态添加到这里 -->
        
        <!-- 悬浮菜单按钮 -->
        <ImageButton
            android:id="@+id/game_drawer_button"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|top"
            android:padding="4dp"
            android:elevation="15dp"
            android:src="@android:drawable/arrow_down_float"
            android:background="@android:color/transparent"
            android:tint="#FFFFFF"
            android:contentDescription="游戏菜单"
            android:visibility="gone" />

    </FrameLayout>

    <!-- 右侧抽屉菜单 -->
    <ListView
        android:id="@+id/game_navigation_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#2D2D30"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:fitsSystemWindows="false"
        android:padding="0dp" />

</androidx.drawerlayout.widget.DrawerLayout>

