<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- 主界面布局 -->
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 顶部工具栏 (15%高度) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="0dp">

            <!-- 应用标题 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rotating art Launcher"
                android:letterSpacing="0.02"
                style="@style/TextAppearance.App.Title" />

            <!-- 控制布局按钮 - Material 3图标按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/controlLayoutButton"
                android:layout_marginEnd="12dp"
                android:contentDescription="控制布局"
                app:icon="@drawable/ic_controller"
                style="@style/Widget.App.Button.ToolbarIcon" />

            <!-- 设置按钮 - Material 3图标按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsButton"
                android:layout_marginEnd="12dp"
                android:contentDescription="设置"
                app:icon="@drawable/ic_settings"
                style="@style/Widget.App.Button.ToolbarIcon" />

            <!-- 刷新按钮 - Material 3图标按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/refreshButton"
                android:layout_marginEnd="12dp"
                android:contentDescription="刷新"
                app:icon="@drawable/ic_refresh"
                style="@style/Widget.App.Button.ToolbarIcon" />

            <!-- GOG 客户端按钮 - Material 3图标按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/gogButton"
                android:layout_marginEnd="12dp"
                android:contentDescription="GOG 游戏库"
                app:icon="@drawable/ic_gog"
                style="@style/Widget.App.Button.ToolbarIcon" />

            <!-- 视图切换按钮 (使用 ralib 组件) -->
            <com.app.ralib.ui.ViewSwitcherButton
                android:id="@+id/viewSwitchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                app:primaryIcon="@drawable/ralib_ic_grid_view"
                app:secondaryIcon="@drawable/ralib_ic_folder_view"
                app:primaryLabel=""
                app:secondaryLabel="" />

            <!-- 添加游戏按钮 - Material 3图标按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addGameButton"
                android:contentDescription="添加预设游戏"
                app:icon="@drawable/ic_add"
                style="@style/Widget.App.Button.ToolbarIcon" />

        </LinearLayout>

        <!-- 内容区域 (85%高度) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="85"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/colorBackground">

            <!-- 左侧游戏区域 (3/4宽度) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <!-- 游戏列表卡片 - Material 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Widget.App.CardView.Standard">

                    <!-- 游戏RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/gameRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:overScrollMode="never"
                        android:scrollbars="vertical"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2" />

                    <!-- 文件浏览器容器 -->
                    <FrameLayout
                        android:id="@+id/fileBrowserContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- 右侧信息区域 (1/4宽度) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- 空状态提示卡片 - Material 3 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/emptySelectionText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            style="@style/Widget.App.CardView.Standard">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="40dp">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_game_controller"
                                    app:tint="?attr/colorOnSurfaceVariant"
                                    android:layout_marginBottom="16dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="请选择一个游戏"
                                    android:textStyle="bold"
                                    style="@style/TextAppearance.App.Hint" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="点击左侧游戏开始"
                                    android:layout_marginTop="8dp"
                                    style="@style/TextAppearance.App.Hint" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- 选中的游戏信息卡片 - Material 3 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/selectedGameInfo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            style="@style/Widget.App.CardView.Standard">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"

                                android:gravity="center">

                                <!-- 游戏图标容器 -->
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:background="@drawable/bg_rounded_transparent"
                                    android:backgroundTint="?attr/colorSurface"
                                    android:gravity="center"
                                    android:padding="12dp">

                                    <ImageView
                                        android:id="@+id/selectedGameImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_game_default" />

                                </LinearLayout>

                                <!-- 游戏名称 -->
                                <TextView
                                    android:id="@+id/selectedGameName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:gravity="center"
                                    android:text="游戏名称"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="?attr/textPrimary" />



                                <!-- 游戏描述 -->
                                <TextView
                                    android:id="@+id/selectedGameDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="游戏描述"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    style="@style/TextAppearance.App.Hint" />

                                <!-- ModLoader 开关 -->
                                <LinearLayout
                                    android:id="@+id/modLoaderSwitchContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="12dp"
                                    android:background="@drawable/bg_rounded_transparent"
                                    android:backgroundTint="?attr/colorSurface"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="启用 ModLoader"
                                        android:textColor="?attr/textPrimary"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <com.google.android.material.materialswitch.MaterialSwitch
                                        android:id="@+id/modLoaderSwitch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- 运行时版本选择 - 缩小版 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/runtimeSelectContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:strokeWidth="1dp"
                            app:strokeColor="?attr/colorOutline"
                            android:visibility="gone"
                            style="@style/Widget.App.CardView.Small">

                            <LinearLayout
                                android:id="@+id/btnRuntimeSelector"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_settings"
                                    android:background="@drawable/bg_circle"
                                    android:backgroundTint="?attr/colorSurface"
                                    android:padding="6dp"
                                    app:tint="?attr/colorOnSurfaceVariant"
                                    android:layout_marginEnd="10dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=".NET 运行时"
                                        android:textSize="10sp"
                                        android:textColor="?attr/textSecondary" />

                                    <TextView
                                        android:id="@+id/tvCurrentRuntime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=".NET 10.0.0"
                                        android:textColor="?attr/textPrimary"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="2dp" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </ScrollView>

                <!-- 启动游戏按钮 - 现代化设计（缩小尺寸） -->
                <com.app.ralib.ui.ModernButton
                    android:id="@+id/launchGameButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    app:buttonText="启动游戏"
                    app:buttonIcon="@drawable/ic_play"
                    app:buttonColor="?attr/colorPrimary"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Fragment容器 -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone" />

</FrameLayout>