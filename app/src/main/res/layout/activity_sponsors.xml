<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 赞助者星空墙 - 主显示区域 -->
    <com.app.ralaunch.sponsor.SponsorWallView
        android:id="@+id/sponsorWallView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <!-- Konfetti 庆祝粒子效果层 -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false" />

    <!-- 顶部标题区域 - 半透明悬浮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_top_fade"
            android:paddingTop="32dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="16dp">

            <!-- 返回按钮 -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="start|center_vertical"
                android:background="@drawable/bg_circle_button"
                android:src="@drawable/ic_arrow_back"
                app:tint="#FFFFFF"
                android:contentDescription="@string/back" />

            <!-- 标题 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sponsors_wall_title"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowRadius="4"
                    android:shadowDx="0"
                    android:shadowDy="2" />

            </LinearLayout>

            <!-- 赞助按钮 -->
            <ImageButton
                android:id="@+id/btnSponsor"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/bg_circle_button"
                android:src="@drawable/ic_favorite"
                app:tint="#FF6B9D"
                android:contentDescription="@string/become_sponsor" />

        </FrameLayout>

    </LinearLayout>

    <!-- 加载状态 -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#CC000000"
        android:visibility="gone">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="#FFFFFF"
            app:trackColor="#40FFFFFF"
            app:trackCornerRadius="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sponsors_loading"
            android:textColor="#E0FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- 错误状态 -->
    <LinearLayout
        android:id="@+id/errorContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="#CC000000"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_error"
            app:tint="#FF6B6B"
            android:alpha="0.9" />

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sponsors_error"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/retry"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="24dp"
            android:paddingHorizontal="32dp" />

    </LinearLayout>

    <!-- 底部操作提示 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="@string/sponsors_tip_gesture"
        android:textColor="#60FFFFFF"
        android:textSize="12sp"
        android:background="@drawable/bg_pill_dark"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp" />

</FrameLayout>
