<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 透明度卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_opacity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_opacity_title"
                        android:textColor="?attr/textPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_opacity_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_opacity_desc"
                        android:textColor="?attr/textSecondary"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_opacity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="70%"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:value="70"
                android:stepSize="1"
                app:labelBehavior="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 边框透明度卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_border_opacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_border_opacity"
                        android:textColor="?attr/textPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_border_opacity_desc"
                        android:textColor="?attr/textSecondary"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_border_opacity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="100%"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_border_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:value="100"
                android:stepSize="1"
                app:labelBehavior="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 文本透明度卡片（仅按钮和文本控件显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_text_opacity"
        style="@style/Widget.App.CardView.Standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_text_opacity"
                        android:textColor="?attr/textPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/editor_text_opacity_desc"
                        android:textColor="?attr/textSecondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_text_opacity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="100%"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_text_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:value="100"
                android:valueFrom="0"
                android:valueTo="100"
                app:labelBehavior="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 摇杆头透明度卡片（仅摇杆类型显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_stick_opacity"
        style="@style/Widget.App.CardView.Standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_stick_opacity"
                        android:textColor="?attr/textPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/editor_stick_opacity_desc"
                        android:textColor="?attr/textSecondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_stick_opacity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="70%"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_stick_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:value="70"
                android:valueFrom="0"
                android:valueTo="100"
                app:labelBehavior="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 摇杆圆心大小卡片（仅摇杆类型显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_stick_knob_size"
        style="@style/Widget.App.CardView.Standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_stick_knob_size"
                        android:textColor="?attr/textPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/editor_stick_knob_size_desc"
                        android:textColor="?attr/textSecondary"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_stick_knob_size_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="40%"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_stick_knob_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:value="40"
                android:valueFrom="0"
                android:valueTo="100"
                app:labelBehavior="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 纹理设置卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_texture"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_texture_desc"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_texture_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/control_texture_disabled"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 游戏内可见卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_visible_in_game"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_visible_in_game_desc"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:checked="true"
                app:thumbTint="?attr/colorPrimary"
                app:trackTint="?attr/colorOutlineVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 背景颜色卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_bg_color"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_bg_color_desc"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <View
                android:id="@+id/view_bg_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_key_button" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 圆角度卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_corner_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_corner_radius"
                        android:textColor="?attr/textPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editor_corner_radius_desc"
                        android:textColor="?attr/textSecondary"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_corner_radius_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="2"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/seekbar_corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="50"
                android:value="2"
                android:stepSize="1"
                app:labelBehavior="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 边框颜色卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_stroke_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_stroke_color"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_stroke_color_desc"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <View
                android:id="@+id/view_stroke_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_key_button" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
