<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <!-- 控件名称卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_control_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_outline"
                app:tint="?attr/textPrimary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="控件名称"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置控件的显示名称"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_control_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:hint="控件名称"
                android:textColor="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@null"
                android:gravity="end"
                android:inputType="text"
                android:importantForAutofill="no" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 文本内容卡片（仅文本控件显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                app:tint="?attr/textPrimary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文本内容"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置文本控件显示的文本内容"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_text_content"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:hint="文本内容"
                android:textColor="?attr/colorPrimary"
                android:textColorHint="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@null"
                android:gravity="end"
                android:inputType="text"
                android:importantForAutofill="no" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 控件类型卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_control_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_outline"
                app:tint="?attr/textPrimary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="控件类型"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择控件类型（按钮、摇杆或手柄控件）"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_control_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="按钮"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 控件形状卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_control_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_outline"
                app:tint="?attr/textPrimary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="控件形状"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择控件形状（矩形或圆形）"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_control_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="矩形"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 摇杆模式选择卡片（仅摇杆类型显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_joystick_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_outline"
                app:tint="?attr/textPrimary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摇杆模式"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择摇杆的工作模式"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_joystick_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="键盘模式"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 摇杆左右选择卡片（仅摇杆类型且为SDL控制器模式时显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_joystick_stick_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_outline"
                app:tint="?attr/textPrimary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摇杆选择"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_joystick_stick_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="左摇杆"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_joystick_stick_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:thumbTint="?attr/colorPrimary"
                app:trackTint="?attr/colorOutlineVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 右摇杆攻击模式卡片（仅摇杆类型且为鼠标模式且为右摇杆时显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_right_stick_attack_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info_outline"
                    app:tint="?attr/textPrimary"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="攻击模式"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_attack_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_attack_mode_hold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="长按 - 按住鼠标左键不放"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_attack_mode_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击 - 快速连续点击"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_attack_mode_continuous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="持续 - 保持按住状态"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp" />

            </RadioGroup>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 鼠标移动范围卡片（仅摇杆类型且为鼠标模式且为右摇杆时显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_mouse_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info_outline"
                    app:tint="?attr/textPrimary"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鼠标移动范围"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 左边距 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="左"
                    android:textColor="?attr/textSecondary"
                    android:textSize="14sp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/seekbar_mouse_range_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="0"
                    android:stepSize="1"
                    app:labelBehavior="gone" />

                <TextView
                    android:id="@+id/tv_mouse_range_left"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- 上边距 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="上"
                    android:textColor="?attr/textSecondary"
                    android:textSize="14sp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/seekbar_mouse_range_top"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="0"
                    android:stepSize="1"
                    app:labelBehavior="gone" />

                <TextView
                    android:id="@+id/tv_mouse_range_top"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- 右边界 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="右"
                    android:textColor="?attr/textSecondary"
                    android:textSize="14sp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/seekbar_mouse_range_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="100"
                    android:stepSize="1"
                    app:labelBehavior="gone" />

                <TextView
                    android:id="@+id/tv_mouse_range_right"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- 下边界 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="下"
                    android:textColor="?attr/textSecondary"
                    android:textSize="14sp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/seekbar_mouse_range_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="100"
                    android:stepSize="1"
                    app:labelBehavior="gone" />

                <TextView
                    android:id="@+id/tv_mouse_range_bottom"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- 移动速度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="速度"
                    android:textColor="?attr/textSecondary"
                    android:textSize="14sp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/seekbar_mouse_speed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="60"
                    android:valueTo="200"
                    android:value="80"
                    android:stepSize="10"
                    app:labelBehavior="gone" />

                <TextView
                    android:id="@+id/tv_mouse_speed"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 组合键映射卡片（仅摇杆类型显示） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_joystick_combo_keys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_keyboard"
                app:tint="?attr/textPrimary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组合键映射"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为摇杆方向设置组合手柄按钮（如R+B）"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_joystick_combo_keys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="未设置"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 触摸穿透卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_pass_through"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_outline"
                app:tint="?attr/textPrimary"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="触摸穿透"
                    android:textColor="?attr/textPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开启后触摸此控件也会触发游戏点击"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_pass_through"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:thumbTint="?attr/colorPrimary"
                app:trackTint="?attr/colorOutlineVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
