<?xml version="1.0" encoding="utf-8"?>
<!-- 侧边栏导航风格 - 紧凑极简 MD3 游戏控制编辑对话框 -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    app:strokeWidth="2dp"
    app:strokeColor="?attr/colorOutline"
    app:cardBackgroundColor="?attr/colorSurface"
    style="@style/Widget.Material3.CardView.Outlined">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="350dp"
        android:maxHeight="500dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- 左侧图标导航栏 - MD3 容器 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sidebarContainer"
            android:layout_width="64dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomButtons">

            <LinearLayout
                android:id="@+id/categoryList"
                android:layout_width="match_parent"
                android:layout_height="311dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp">

                <!-- 基本信息 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/categoryBasic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/editor_category_basic_desc"
                            android:src="@drawable/ic_info"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/editor_category_basic"
                            android:textColor="?attr/textPrimary"
                            android:textSize="10sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 位置大小 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/categoryPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/editor_category_position_desc"
                            android:src="@drawable/ic_location_on"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/editor_category_position"
                            android:textColor="?attr/textSecondary"
                            android:textSize="10sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 外观样式 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/categoryAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/editor_category_appearance_desc"
                            android:src="@drawable/ic_palette"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/editor_category_appearance"
                            android:textColor="?attr/textSecondary"
                            android:textSize="10sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 键值设置 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/categoryKeymap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/editor_category_keymap_desc"
                            android:src="@drawable/ic_keyboard"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/editor_category_keymap"
                            android:textColor="?attr/textSecondary"
                            android:textSize="10sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 右侧内容区域 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="false"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/sidebarContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomButtons">

            <FrameLayout
                android:id="@+id/contentFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 基本信息内容 -->

                <!-- 位置大小内容 -->

                <LinearLayout
                    android:id="@+id/contentBasic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <include layout="@layout/content_basic_info" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contentPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include layout="@layout/content_position_size" />

                </LinearLayout>

                <!-- 外观样式内容 -->
                <LinearLayout
                    android:id="@+id/contentAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include layout="@layout/content_appearance" />

                </LinearLayout>

                <!-- 键值设置内容 -->
                <LinearLayout
                    android:id="@+id/contentKeymap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include layout="@layout/content_keymap" />

                </LinearLayout>

            </FrameLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- 底部操作按钮栏 - MD3 分隔线 -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/sidebarContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentScrollView"
            app:layout_constraintBottom_toTopOf="@id/bottomButtons"/>

        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/sidebarContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_delete"
                android:textSize="14sp"
                android:minWidth="80dp"
                android:minHeight="40dp"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_copy"
                android:textSize="14sp"
                android:minWidth="80dp"
                android:minHeight="40dp"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_content_copy"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_save_button"
                android:textSize="14sp"
                android:minWidth="80dp"
                android:minHeight="40dp"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_save"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_close"
                android:textSize="14sp"
                android:minWidth="80dp"
                android:minHeight="40dp"
                android:paddingHorizontal="20dp"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
