<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2D2D30">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/properties_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="输入控件名称"
            android:textColor="?attr/textPrimary"
            android:textColorHint="#888888"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_label" />

        <TextView
            android:id="@+id/size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尺寸"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_name" />

        <EditText
            android:id="@+id/et_width"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="宽度"
            android:inputType="numberDecimal"
            android:textColor="?attr/textPrimary"
            android:textColorHint="#888888"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/size_separator"
            app:layout_constraintTop_toBottomOf="@id/size_label" />

        <TextView
            android:id="@+id/size_separator"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text=" × "
            android:textColor="?attr/textPrimary"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/et_width"
            app:layout_constraintEnd_toStartOf="@id/et_height"
            app:layout_constraintTop_toTopOf="@id/et_width"
            app:layout_constraintBottom_toBottomOf="@id/et_width" />

        <EditText
            android:id="@+id/et_height"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="高度"
            android:inputType="numberDecimal"
            android:textColor="?attr/textPrimary"
            android:textColorHint="#888888"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/size_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_width"
            app:layout_constraintBottom_toBottomOf="@id/et_width" />

        <TextView
            android:id="@+id/mapping_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按键映射"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_width" />

        <Spinner
            android:id="@+id/spinner_keycode"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mapping_label" />

        <TextView
            android:id="@+id/opacity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不透明度"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_keycode" />

        <SeekBar
            android:id="@+id/seekbar_opacity"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:max="100"
            android:progress="70"
            app:layout_constraintEnd_toStartOf="@id/tv_opacity_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/opacity_label" />

        <TextView
            android:id="@+id/tv_opacity_value"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:text="70%"
            android:textColor="?attr/textPrimary"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/seekbar_opacity"
            app:layout_constraintBottom_toBottomOf="@id/seekbar_opacity" />

        <TextView
            android:id="@+id/bg_color_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景颜色"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekbar_opacity" />

        <Button
            android:id="@+id/btn_bg_color"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="选择颜色"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@android:drawable/ic_menu_edit"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_color_label" />

        <TextView
            android:id="@+id/stroke_color_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="边框颜色"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_bg_color" />

        <Button
            android:id="@+id/btn_stroke_color"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="选择颜色"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@android:drawable/ic_menu_edit"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stroke_color_label" />

        <TextView
            android:id="@+id/stroke_width_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="边框宽度"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_stroke_color" />

        <SeekBar
            android:id="@+id/seekbar_stroke_width"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:max="20"
            android:progress="4"
            app:layout_constraintEnd_toStartOf="@id/tv_stroke_width_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stroke_width_label" />

        <TextView
            android:id="@+id/tv_stroke_width_value"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:text="4"
            android:textColor="?attr/textPrimary"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/seekbar_stroke_width"
            app:layout_constraintBottom_toBottomOf="@id/seekbar_stroke_width" />

        <TextView
            android:id="@+id/corner_radius_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆角半径"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekbar_stroke_width" />

        <SeekBar
            android:id="@+id/seekbar_corner_radius"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:max="50"
            android:progress="8"
            app:layout_constraintEnd_toStartOf="@id/tv_corner_radius_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/corner_radius_label" />

        <TextView
            android:id="@+id/tv_corner_radius_value"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:text="8"
            android:textColor="?attr/textPrimary"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/seekbar_corner_radius"
            app:layout_constraintBottom_toBottomOf="@id/seekbar_corner_radius" />

        <CheckBox
            android:id="@+id/checkbox_visible"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="显示控件"
            android:textColor="?attr/textPrimary"
            android:checked="true"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/seekbar_corner_radius" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

