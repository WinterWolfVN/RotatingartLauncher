<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2D2D30"
    android:padding="20dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编辑按键"
        android:textColor="?attr/textPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 控件基本信息分组 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="控件基本信息"
                android:textColor="?attr/textSecondary"
                android:textSize="13sp"
                android:paddingVertical="8dp"
                android:background="?attr/backgroundSecondary"
                android:paddingStart="8dp"
                android:layout_marginBottom="12dp" />

            <!-- 显示的文本 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="显示的文本"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:textColor="?attr/textPrimary"
                android:textSize="14sp"
                android:padding="12dp"
                android:hint="Input"
                android:textColorHint="#666666"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="text" />

            <!-- 可视性 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="可视性"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_visibility"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="12dp" />

            <!-- X 坐标 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X 坐标"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="−"
                    android:textColor="?attr/textPrimary"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_x"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="?attr/textPrimary"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tv_x_value"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="10.0%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Y 坐标 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Y 坐标"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="−"
                    android:textColor="?attr/textPrimary"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_y"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="80" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="?attr/textPrimary"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tv_y_value"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="80.0%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- 尺寸类型 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="尺寸类型"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_size_type"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="12dp" />

            <!-- 宽度参考对象 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="宽度参考对象"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_width_ref"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:layout_marginTop="4dp"
                android:paddingHorizontal="12dp" />

            <!-- 尺寸 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="尺寸"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="−"
                    android:textColor="?attr/textPrimary"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="?attr/textPrimary"
                    android:textSize="20sp"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tv_size_value"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="45.0%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:background="?attr/colorPrimary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_copy_control"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="复制控件"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:background="#2196F3"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_delete_control"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="删除控件"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:background="#FF5252"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:background="#757575" />

    </LinearLayout>

</LinearLayout>

