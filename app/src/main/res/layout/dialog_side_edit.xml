<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/side_dialog_layout"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:orientation="vertical"
    android:background="?attr/backgroundSecondary"
    android:elevation="20dp">

    <!-- 标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/backgroundCard"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="编辑控件"
            android:textColor="?attr/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_close_panel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="?attr/textPrimary"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="关闭" />
    </RelativeLayout>

    <!-- 内容滚动区 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 名称 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?attr/backgroundCard"
                android:textColor="?attr/textPrimary"
                android:textSize="14sp"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:importantForAutofill="no"
                android:inputType="text" />

            <!-- X坐标 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X 坐标"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <SeekBar
                    android:id="@+id/seekbar_x"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100" />

                <TextView
                    android:id="@+id/tv_x_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Y坐标 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Y 坐标"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <SeekBar
                    android:id="@+id/seekbar_y"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100" />

                <TextView
                    android:id="@+id/tv_y_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 宽度 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="宽度"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <SeekBar
                    android:id="@+id/seekbar_width"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100" />

                <TextView
                    android:id="@+id/tv_width_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 高度 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高度"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <SeekBar
                    android:id="@+id/seekbar_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100" />

                <TextView
                    android:id="@+id/tv_height_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 保持宽高比 -->
            <CheckBox
                android:id="@+id/checkbox_keep_aspect_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保持宽高比"
                android:textColor="?attr/textPrimary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:checked="false" />

            <!-- 尺寸（等比例调整） -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="尺寸（等比例）"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <SeekBar
                    android:id="@+id/seekbar_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100" />

                <TextView
                    android:id="@+id/tv_size_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 不透明度 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="不透明度"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <SeekBar
                    android:id="@+id/seekbar_opacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="70" />

                <TextView
                    android:id="@+id/tv_opacity_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="70%"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- 可见性 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="游戏内可见"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkbox_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- 按键映射（仅按钮显示） -->
            <TextView
                android:id="@+id/tv_keymap_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="按键映射"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_select_key"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="未绑定"
                android:textColor="?attr/textPrimary"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:backgroundTint="?attr/backgroundCard"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:drawableEnd="@android:drawable/arrow_down_float" />

            <!-- 切换按钮模式（仅按钮显示） -->
            <TextView
                android:id="@+id/tv_toggle_mode_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="按钮行为"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/checkbox_toggle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="切换模式（按一次开启，再按一次关闭）"
                android:textColor="?attr/textPrimary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <!-- 颜色自定义 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="颜色设置"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_bg_color"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="背景色"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_stroke_color"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="边框色"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 边框样式 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="边框设置"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="边框宽度"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <SeekBar
                    android:id="@+id/seekbar_stroke_width"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="20"
                    android:progress="2" />

                <TextView
                    android:id="@+id/tv_stroke_width_value"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:gravity="end|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="圆角半径"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <SeekBar
                    android:id="@+id/seekbar_corner_radius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="50"
                    android:progress="8" />

                <TextView
                    android:id="@+id/tv_corner_radius_value"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:gravity="end|center_vertical" />
            </LinearLayout>

            <!-- 控件操作 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="控件操作"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_duplicate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="复制控件"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="?attr/colorPrimary" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="删除控件"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:backgroundTint="#F44336" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/backgroundCard">

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="应用更改"
            android:textColor="?attr/textPrimary"
            android:textSize="14sp"
            android:backgroundTint="?attr/colorPrimary" />
    </LinearLayout>

</LinearLayout>

