<?xml version="1.0" encoding="utf-8"?>
<!-- 版本选择对话框 - MD3 横屏风格 -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="600dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题 -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择版本"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="24dp" />

        <!-- 横向布局：游戏版本 和 ModLoader 版本 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- 游戏版本选择区域 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <!-- 游戏版本卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="游戏版本"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp" />

                        <!-- 游戏版本 Spinner -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="?attr/colorOutline"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <Spinner
                                android:id="@+id/spinnerGameVersion"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:paddingHorizontal="16dp"
                                android:spinnerMode="dropdown"
                                android:dropDownVerticalOffset="60dp"
                                android:popupBackground="?attr/colorSurfaceContainer" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- ModLoader 版本选择区域 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <!-- ModLoader 版本卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tvModLoaderTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ModLoader 版本"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorSecondary"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp" />

                        <!-- ModLoader 版本 Spinner -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="?attr/colorOutline"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <Spinner
                                android:id="@+id/spinnerModLoaderVersion"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:paddingHorizontal="16dp"
                                android:spinnerMode="dropdown"
                                android:dropDownVerticalOffset="60dp"
                                android:popupBackground="?attr/colorSurfaceContainer" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- 提示信息 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSecondaryContainer">

        </com.google.android.material.card.MaterialCardView>

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="15sp"
                android:minWidth="100dp"
                android:layout_marginEnd="12dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始安装"
                android:textSize="15sp"
                android:minWidth="120dp"
                app:icon="@drawable/ic_download"
                app:iconGravity="start"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

