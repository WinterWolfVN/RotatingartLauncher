<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary"
    android:orientation="vertical">

    <!-- 顶部标题栏 -->
    <include
        layout="@layout/include_fragment_header"
        android:id="@+id/header" />

    <!-- 分隔线 -->
    <include layout="@layout/include_divider" />

    <!-- 主要内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- 两个选项卡片 - 横向排列 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <!-- 在线下载卡片 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/downloadGameCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="?attr/backgroundCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground">

                        <!-- 图标背景圆形 -->
                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="?attr/colorPrimary"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_download"
                                app:tint="?attr/textPrimary" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="在线下载"
                            android:textColor="?attr/textPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="从GOG下载游戏文件"
                            android:textColor="?attr/textSecondary"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="12dp" />

                        <Button
                            android:id="@+id/downloadGameButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="开始下载"
                            android:textColor="?attr/textPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_card_8dp"
                            android:backgroundTint="?attr/colorPrimary"
                            android:elevation="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 本地导入卡片 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/localImportCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="?attr/backgroundCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground">

                        <!-- 图标背景圆形 -->
                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="?attr/colorSecondary"
                            android:elevation="4dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_folder"
                                app:tint="?attr/textPrimary" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="本地导入"
                            android:textColor="?attr/textPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="从本地选择安装文件"
                            android:textColor="?attr/textSecondary"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="12dp" />

                        <Button
                            android:id="@+id/localImportButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="选择文件"
                            android:textColor="?attr/textPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_card_8dp"
                            android:backgroundTint="?attr/colorSecondary"
                            android:elevation="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
