<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 顶部标题栏 - 简化版 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="返回"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下载选项"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- 移除了下一步按钮 -->

    </LinearLayout>

    <!-- 主要内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 下载选项区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="#2A2A2A"
                android:padding="16dp"
                android:elevation="2dp">

                <!-- 下载游戏选项 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#252525">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="登录并下载"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="通过内置浏览器登录GOG账户并下载游戏文件"
                            android:textColor="#BBBBBB"
                            android:textSize="12sp"
                            android:layout_marginBottom="12dp" />

                        <Button
                            android:id="@+id/downloadGameButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="登录并下载"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_rounded_corner"
                            android:backgroundTint="#2196F3"
                            android:drawableStart="@drawable/ic_download"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 本地导入选项 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#252525">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="本地导入"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="如果您已有游戏安装文件，可以从本地导入"
                            android:textColor="#BBBBBB"
                            android:textSize="12sp"
                            android:layout_marginBottom="12dp" />

                        <Button
                            android:id="@+id/localImportButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="选择文件"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_rounded_corner"
                            android:backgroundTint="#FF9800"
                            android:drawableStart="@drawable/ic_folder"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- 下载进度区域 -->
            <LinearLayout
                android:id="@+id/downloadProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="#1A1A1A"
                android:padding="20dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="下载进度"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- tModLoader 下载进度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="tModLoader"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/tmodloaderProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        android:progressTint="#4CAF50"
                        android:backgroundTint="#333333" />

                    <TextView
                        android:id="@+id/tmodloaderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等待下载..."
                        android:textColor="#BBBBBB"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- 游戏本体下载进度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="游戏本体"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/gameProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        android:progressTint="#2196F3"
                        android:backgroundTint="#333333" />

                    <TextView
                        android:id="@+id/gameStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等待下载..."
                        android:textColor="#BBBBBB"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 内置浏览器容器 -->
            <LinearLayout
                android:id="@+id/browserContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="#000000"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:elevation="4dp">

                <!-- 浏览器标题栏 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#2D2D2D"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <Button
                        android:id="@+id/backFromBrowserButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:text="←"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/browserTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GOG登录"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <!-- 进度条 -->
                <ProgressBar
                    android:id="@+id/webViewProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:progress="0"
                    android:progressTint="#4CAF50"
                    android:visibility="gone" />

                <!-- WebView -->
                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>