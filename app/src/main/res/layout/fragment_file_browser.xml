<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- 顶部标题栏 - 更紧凑 -->
    <include
        layout="@layout/include_fragment_header_compact"
        android:id="@+id/header" />

    <!-- 当前路径显示 - 更紧凑 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        style="@style/Widget.App.CardView.PathDisplay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_folder"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/currentPathText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/storage/emulated/0/Download"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="middle"
                android:textColor="?attr/textSecondary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 搜索和排序工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <!-- 搜索框 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            style="@style/Widget.App.CardView.SearchBox">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_search"
                    app:tint="?attr/textSecondary" />

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="搜索文件..."
                    android:textColorHint="?attr/textHint"
                    android:textColor="?attr/textPrimary"
                    android:textSize="11sp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:maxLines="1"
                    android:inputType="text" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 排序按钮 -->
        <ImageButton
            android:id="@+id/sortButton"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_sort"
            android:contentDescription="排序"
            app:tint="?attr/colorPrimary"
            style="@style/Widget.App.ImageButton.Toolbar" />

    </LinearLayout>

    <!-- 文件列表区域 - 占据主要空间 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        style="@style/Widget.App.CardView.FileList">

        <!-- 空状态 -->
        <include
            layout="@layout/include_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- 权限拒绝状态 -->
        <LinearLayout
            android:id="@+id/permissionDeniedState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_permission_denied"
                app:tint="?attr/colorError"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="需要存储权限"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/textPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请授予存储权限以浏览文件"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                style="@style/TextAppearance.App.Medium"
                android:textColor="?attr/textSecondary" />

            <Button
                android:id="@+id/grantPermissionButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="授予权限"
                android:textColor="?attr/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_card_8dp"
                android:backgroundTint="?attr/colorPrimary"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>

        <!-- 文件列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fileRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:clipToPadding="false" />

    </androidx.cardview.widget.CardView>

    <!-- 确认按钮 - 更紧凑 -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="选择文件"
        android:textColor="?attr/textPrimary"
        android:textSize="8sp"
        android:textStyle="bold"
        android:background="@drawable/bg_card_8dp"
        android:backgroundTint="?attr/colorSecondary"
        android:enabled="false" />

</LinearLayout>