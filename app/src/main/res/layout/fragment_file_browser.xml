<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 顶部标题栏 - 更紧凑 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="返回"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="文件浏览器"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </LinearLayout>

    <!-- 当前路径显示 - 更紧凑 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#1A1A1A"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_folder"
                app:tint="#7E57C2"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/currentPathText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/storage/emulated/0/Download"
                android:textColor="#BBBBBB"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="middle" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 文件列表区域 - 占据主要空间 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#1A1A1A"
        android:layout_marginBottom="8dp">

        <!-- 空状态 -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="30dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_folder_open"
                app:tint="#5C6BC0"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/emptyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="当前目录为空"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- 权限拒绝状态 -->
        <LinearLayout
            android:id="@+id/permissionDeniedState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_permission_denied"
                app:tint="#FF5252"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="需要存储权限"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请授予存储权限以浏览文件"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/grantPermissionButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="授予权限"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="#5C6BC0"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>

        <!-- 文件列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fileRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:clipToPadding="false" />

    </androidx.cardview.widget.CardView>

    <!-- 确认按钮 - 更紧凑 -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="选择文件"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        android:textStyle="bold"
        android:background="@drawable/bg_rounded_corner"
        android:backgroundTint="#5C6BC0"
        android:enabled="false" />

</LinearLayout>