<?xml version="1.0" encoding="utf-8"?>
<!-- GOG 客户端界面 - 现代化 MD3 工具栏设计 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- ===== 登录界面 ===== -->
    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 顶部工具栏 - 登录状态 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:attr/colorBackground"
            app:title="GOG Galaxy"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="?attr/textPrimary"
            app:titleTextColor="?attr/textPrimary"
            app:elevation="0dp" />

        <!-- 登录内容 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- 登录卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loginCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                style="@style/Widget.Material3.CardView.Filled">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- 头部 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:id="@+id/gogLogoImage"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_gog_logo"
                            android:background="@drawable/circle_primary_container"
                            android:padding="4dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="登录 GOG"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="?attr/textPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="访问您的 DRM-Free 游戏库"
                                android:textSize="13sp"
                                android:textColor="?attr/textSecondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 用户名输入框 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/usernameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="邮箱地址"
                        app:startIconDrawable="@drawable/ic_email"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 密码输入框 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="密码"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:endIconMode="password_toggle"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 按钮组 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- 登录按钮 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnLogin"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="登录"
                            android:textSize="15sp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_login"
                            app:iconGravity="textStart"
                            app:iconPadding="6dp"
                            android:layout_marginEnd="8dp" />

                        <!-- 访问官网按钮 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVisitGog"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="访问官网"
                            android:textSize="15sp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_open_in_browser"
                            app:iconGravity="textStart"
                            app:iconPadding="6dp"
                            android:layout_marginStart="8dp"
                            style="@style/Widget.Material3.Button.TonalButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 底部提示 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_verified"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无 DRM · 跨平台 · 云存档"
                    android:textSize="13sp"
                    android:textColor="?attr/textSecondary"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- ===== 已登录界面 ===== -->
    <LinearLayout
        android:id="@+id/loggedInContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 顶部工具栏 - 已登录状态 -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorBackground"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarLoggedIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="?attr/textPrimary">

                <!-- 工具栏自定义布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp">

                    <!-- 用户头像 -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/userAvatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="?attr/colorPrimary"
                        android:scaleType="fitCenter"
                        app:shapeAppearanceOverlay="@style/CircleImageView" />

                    <!-- 用户信息 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GOG 用户"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textPrimary"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/userEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已登录"
                                android:textSize="11sp"
                                android:textColor="?attr/textSecondary"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" · "
                                android:textSize="11sp"
                                android:textColor="?attr/textSecondary" />

                            <TextView
                                android:id="@+id/chipGameCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 款游戏"
                                android:textSize="11sp"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 刷新按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRefresh"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="20dp"
                        app:cornerRadius="10dp"
                        style="@style/Widget.Material3.Button.IconButton" />

                    <!-- 视图切换按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewToggle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_grid_view"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="20dp"
                        app:cornerRadius="10dp"
                        style="@style/Widget.Material3.Button.IconButton" />

                    <!-- 登出按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogout"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_logout"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="18dp"
                        app:cornerRadius="10dp"
                        style="@style/Widget.Material3.Button.IconButton" />

                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- 游戏列表容器 - 占据剩余所有空间 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp">

            <!-- 游戏列表卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/gamesCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gamesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_gog_game" />

            </com.google.android.material.card.MaterialCardView>

            <!-- 空状态 -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_games"
                    app:tint="?attr/colorOutline"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="没有找到游戏"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textSecondary"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的 GOG 库中暂无游戏"
                    android:textSize="12sp"
                    android:textColor="?attr/textSecondary"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- 加载进度遮罩 -->
    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent_dark"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="36dp"
                android:paddingVertical="28dp"
                android:gravity="center"
                android:minWidth="160dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressIndicator"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:indeterminate="true"
                    app:indicatorSize="44dp"
                    app:trackThickness="4dp" />

                <TextView
                    android:id="@+id/loadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中..."
                    android:textSize="14sp"
                    android:textColor="?attr/textPrimary"
                    android:layout_marginTop="14dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</LinearLayout>
