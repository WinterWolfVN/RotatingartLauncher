<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary">

    <!-- 背景装饰 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?attr/colorPrimary"
        android:alpha="0.08" />

    <!-- 主容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 法律声明界面 -->
        <FrameLayout
            android:id="@+id/legalLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundCard"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                android:paddingVertical="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_legal_title"
                    android:textColor="?attr/textPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_legal_subtitle"
                    android:textColor="?attr/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="60dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:scrollbarStyle="outsideOverlay">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp">

                    <!-- 防倒卖声明（醒目） -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card_8dp"
                        android:backgroundTint="#20FF5722"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_legal_important"
                            android:textColor="#FF5722"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_legal_important_message"
                            android:textColor="?attr/textPrimary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:id="@+id/officialDownloadLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/init_legal_official_download"
                            android:textColor="#64B5F6"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingVertical="6dp"
                            android:background="?attr/selectableItemBackground" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/init_legal_terms"
                        android:textColor="?attr/textSecondary"
                        android:textSize="13sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/textSecondary"
                        android:alpha="0.2"
                        android:layout_marginVertical="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/init_legal_accept_hint"
                        android:textColor="?attr/textPrimary"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                            </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <!-- 按钮放在右下角 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|end"
                android:layout_margin="24dp">

                <Button
                    android:id="@+id/btnDeclineLegal"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/secondary_button"
                    android:text="@string/init_exit"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:contentDescription="@string/content_desc_exit_app_button" />

                <Button
                    android:id="@+id/btnAcceptLegal"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_button"
                    android:text="@string/init_accept_and_continue"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:contentDescription="@string/content_desc_accept_legal_button" />

            </LinearLayout>

        </FrameLayout>

            <!-- 权限请求界面 -->
            <LinearLayout
                android:id="@+id/permissionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <!-- 卡片容器 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="?attr/backgroundCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_grant"
                            android:textColor="?attr/textPrimary"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/init_permission_desc"
                            android:textColor="?attr/textSecondary"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginBottom="36dp" />

                        <TextView
                            android:id="@+id/permissionStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="?attr/textSecondary"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginBottom="24dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnSkipPermissions"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/secondary_button"
                                android:text="@string/init_skip"
                                android:textColor="?attr/textPrimary"
                                android:textSize="14sp"
                                android:contentDescription="@string/content_desc_skip_permission_button" />

                            <Button
                                android:id="@+id/btnRequestPermissions"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:background="@drawable/selector_button"
                                android:text="@string/permission_grant"
                                android:textColor="?attr/textPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:contentDescription="@string/content_desc_grant_permission_button" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- 组件解压界面 - 使用独立布局文件 -->
            <include
                layout="@layout/layout_installation_component"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </FrameLayout>

</FrameLayout>
