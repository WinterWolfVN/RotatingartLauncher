<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="返回"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="本地导入"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

    <!-- 主要内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 文件选择区域 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#1E1E1E"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择文件"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- 游戏文件选择 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="游戏本体文件"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/gameFileText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="请选择 Terraria 游戏文件 (.sh)"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/selectGameFileButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="选择文件"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:background="@drawable/bg_rounded_corner"
                            android:backgroundTint="#2196F3"
                            android:drawableStart="@drawable/ic_file"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                    <!-- tModLoader 文件选择 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="tModLoader 文件"
                            android:textColor="#CCCCCC"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8px" />

                        <TextView
                            android:id="@+id/tmodloaderFileText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="请选择 tModLoader 文件 (.zip)"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/selectTmodloaderButton"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="选择文件"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:background="@drawable/bg_rounded_corner"
                            android:backgroundTint="#FF9800"
                            android:drawableStart="@drawable/ic_zip"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 开始导入按钮 -->
            <Button
                android:id="@+id/startImportButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="开始导入"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="@color/button_primary"
                android:layout_marginBottom="16dp"
                android:enabled="false" />

            <!-- 导入进度区域 -->
            <LinearLayout
                android:id="@+id/importProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_corner"
                android:backgroundTint="#1A1A1A"
                android:padding="20dp"
                android:visibility="gone"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="导入进度"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <ProgressBar
                    android:id="@+id/importProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:progressTint="#4CAF50"
                    android:backgroundTint="#333333" />

                <TextView
                    android:id="@+id/importStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="准备导入..."
                    android:textColor="#BBBBBB"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <!-- 说明区域 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="文件说明"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 游戏本体: Terraria Linux 安装文件 (terraria_v1_4_4_9_v4_60321.sh)"
                        android:textColor="#CCCCCC"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• tModLoader: tModLoader 压缩包文件 (tmodloader.zip)"
                        android:textColor="#CCCCCC"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>