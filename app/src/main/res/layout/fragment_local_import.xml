<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:orientation="vertical">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="返回"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="本地导入"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- 占位，保持标题居中 -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2A2A2A"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- 主要内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- 文件选择卡片容器 - 横向排列 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- 游戏本体文件卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 图标和标题 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="#1565C0">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_file"
                                app:tint="#FFFFFF" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="游戏本体"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terraria (.sh)"
                                android:textColor="#BBBBBB"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 已选择的文件名 -->
                    <TextView
                        android:id="@+id/gameFileText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未选择"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:background="@drawable/bg_rounded_corner"
                        android:backgroundTint="#252525"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/selectGameFileButton"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="选择文件"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_rounded_corner"
                        android:backgroundTint="#2196F3" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ModLoader 文件卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 图标和标题 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle"
                            android:backgroundTint="#E65100">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_zip"
                                app:tint="#FFFFFF" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ModLoader (可选)"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="模组加载器 (.zip)"
                                android:textColor="#BBBBBB"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 已选择的文件名 -->
                    <TextView
                        android:id="@+id/modLoaderFileText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未选择"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:background="@drawable/bg_rounded_corner"
                        android:backgroundTint="#252525"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/selectModLoaderButton"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="选择文件"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_rounded_corner"
                        android:backgroundTint="#FF9800" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 开始导入按钮 -->
        <Button
            android:id="@+id/startImportButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="开始导入"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/bg_rounded_corner"
            android:backgroundTint="#4CAF50"
            android:elevation="4dp"
            android:enabled="false"
            android:alpha="0.5" />

    </LinearLayout>

    <!-- 导入进度区域 -->
    <LinearLayout
        android:id="@+id/importProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#121212"
        android:padding="32dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/importProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="0"
            android:progressTint="#4CAF50"
            android:backgroundTint="#333333"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/importStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="准备导入..."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
