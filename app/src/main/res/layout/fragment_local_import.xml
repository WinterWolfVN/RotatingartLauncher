<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary"
    android:orientation="vertical">

    <!-- 顶部标题栏 -->
    <include
        layout="@layout/include_fragment_header"
        android:id="@+id/header" />

    <!-- 分隔线 -->
    <include layout="@layout/include_divider" />

    <!-- 占位元素 - 为了兼容代码中的 findViewById -->
    <TextView
        android:id="@+id/gameFileText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/modLoaderFileText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/selectGameFileButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/selectModLoaderButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/startImportButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- 导入进度区域 -->
    <LinearLayout
        android:id="@+id/importProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/backgroundPrimary"
        android:padding="32dp"
        android:visibility="visible">

        <com.app.ralib.ui.ModernProgressBar
            android:id="@+id/modernProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:progressColor="?attr/colorPrimary"
            app:showPercentage="true" />

    </LinearLayout>

</LinearLayout>
