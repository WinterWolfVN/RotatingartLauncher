<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary">

    <!-- 左侧导航栏 -->
    <LinearLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/backgroundSidebar"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rotating art Launcher"
            android:textColor="?attr/textPrimary"
            android:textSize="9sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:letterSpacing="0.02"
            android:maxLines="2" />

        <!-- 设置分类列表 -->
        <ListView
            android:id="@+id/settingsCategoryListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:scrollbars="none"
            android:choiceMode="singleChoice" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 右侧内容区域 -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@id/sidebarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/backgroundPrimary">

        <!-- 外观设置内容 -->

        <!-- 控制设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentAppearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible">

            <include layout="@layout/fragment_settings_misc" />
        </androidx.core.widget.NestedScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentControls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="控制设置"
                android:textColor="?attr/textPrimary"
                android:textSize="18sp"
                android:padding="64dp"
                android:gravity="center" />
        </androidx.core.widget.NestedScrollView>

        <!-- 游戏设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游戏设置"
                android:textColor="?attr/textPrimary"
                android:textSize="18sp"
                android:padding="64dp"
                android:gravity="center" />
        </androidx.core.widget.NestedScrollView>

        <!-- 启动器设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentLauncher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动器设置"
                android:textColor="?attr/textPrimary"
                android:textSize="18sp"
                android:padding="64dp"
                android:gravity="center" />
        </androidx.core.widget.NestedScrollView>

        <!-- 实验性设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentDeveloper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true">
            <include layout="@layout/fragment_settings_developer" />
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

    <!-- 右上角关闭按钮 - 增加边距避免误触 -->
    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="关闭"
        android:elevation="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/textPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>
