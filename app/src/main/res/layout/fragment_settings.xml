<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- 顶部分类导航栏 - Underline Tabs 风格 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/settingsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="?android:attr/colorBackground"
        android:minHeight="48dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabSelectedTextColor="?attr/colorPrimary"
        app:tabTextColor="?attr/textSecondary"
        app:tabRippleColor="@android:color/transparent"
        app:tabTextAppearance="@style/TextAppearance.Material3.BodyLarge"
        app:tabPaddingStart="12dp"
        app:tabPaddingEnd="12dp"
        app:tabPaddingTop="12dp"
        app:tabPaddingBottom="12dp"
        app:tabMinWidth="0dp"
        app:tabContentStart="0dp" />

    <!-- 内容区域 -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/colorBackground">

        <!-- 外观设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentAppearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="16dp"
            android:visibility="visible">

            <include layout="@layout/fragment_settings_misc" />

        </androidx.core.widget.NestedScrollView>

        <!-- 控制设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentControls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="16dp"
            android:visibility="gone">

            <include layout="@layout/fragment_settings_controls" />

        </androidx.core.widget.NestedScrollView>

        <!-- 游戏设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="16dp"
            android:visibility="gone">

            <include layout="@layout/fragment_settings_game" />

        </androidx.core.widget.NestedScrollView>

        <!-- 启动器设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentLauncher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="16dp"
            android:visibility="gone">

            <include layout="@layout/fragment_settings_launcher" />

        </androidx.core.widget.NestedScrollView>

        <!-- 实验性设置内容 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentDeveloper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="16dp"
            android:visibility="gone">

            <include layout="@layout/fragment_settings_developer" />

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</LinearLayout>
