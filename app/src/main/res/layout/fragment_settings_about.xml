<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 应用信息卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/aboutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeWidth="0.5dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        style="@style/Widget.App.CardView.Standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 应用标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_info"
                    android:textColor="?attr/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 版本信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本"
                    android:textColor="?attr/textSecondary"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_version"
                    android:textColor="?attr/textPrimary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- 应用描述 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textColor="?attr/textSecondary"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutline"
                android:alpha="0.2"
                android:layout_marginBottom="20dp" />

            <!-- 赞助商墙入口卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSponsors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_star"
                        app:tint="?attr/colorPrimary"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sponsors_wall_title"
                            android:textColor="?attr/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/sponsors_wall_desc"
                            android:textColor="?attr/textSecondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSponsors"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/view"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconSize="18dp"
                        app:iconGravity="textEnd"
                        app:cornerRadius="20dp"
                        android:paddingHorizontal="20dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 爱发电赞助卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAfdian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="#946CE6"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_afdian"
                        app:tint="#946CE6"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="爱发电赞助"
                        android:textColor="?attr/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAfdian"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="赞助"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_open_in_browser"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="20dp"
                        android:paddingHorizontal="20dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Patreon 赞助卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPatreon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="#FF424D"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_patreon"
                        app:tint="#FF424D"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Patreon 赞助"
                        android:textColor="?attr/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPatreon"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="赞助"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_open_in_browser"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="20dp"
                        android:paddingHorizontal="20dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Discord 卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDiscord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="#5865F2"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chat"
                        app:tint="#5865F2"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discord 社区"
                        android:textColor="?attr/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDiscord"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="加入"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_open_in_browser"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="20dp"
                        android:paddingHorizontal="20dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- QQ群卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQQGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="#12B7F5"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_group"
                        app:tint="#12B7F5"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QQ 交流群"
                            android:textColor="?attr/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                       

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQQGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="加入"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_open_in_browser"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="20dp"
                        android:paddingHorizontal="20dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 团队信息标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="项目团队"
                android:textColor="?attr/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- 项目作者卡片 - 长矩形 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_fireworksky"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目作者"
                            android:textColor="?attr/textSecondary"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FireworkSky"
                            android:textColor="?attr/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAuthorGithub"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="GitHub"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_open_in_browser"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="20dp"
                        android:paddingHorizontal="20dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 开发者卡片 - 长矩形 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="?attr/colorSecondary"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_laosparrow"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开发者"
                            android:textColor="?attr/textSecondary"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvContributor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LaoSparrow"
                            android:textColor="?attr/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnContributorGithub"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="GitHub"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_open_in_browser"
                        app:iconSize="18dp"
                        app:iconGravity="textStart"
                        app:cornerRadius="20dp"
                        android:paddingHorizontal="20dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

