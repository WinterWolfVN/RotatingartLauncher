<?xml version="1.0" encoding="utf-8"?>
<!-- GOG 游戏列表项 - 现代化 MD3 设计 -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:rippleColor="?attr/colorPrimary"
    style="@style/Widget.Material3.CardView.Filled">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 游戏封面 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/gameImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedImageView12"
                tools:src="@drawable/ic_games" />

        </com.google.android.material.card.MaterialCardView>

        <!-- 游戏信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/gameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gog_game_title_placeholder"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:textColor="?attr/textPrimary"
                tools:text="The Witcher 3: Wild Hunt" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
