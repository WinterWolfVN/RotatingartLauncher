<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 深色主题 -->
    <style name="Theme.raLaunch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material 主要颜色 -->
        <item name="colorPrimary">@color/background_primary</item>
        <item name="colorPrimaryVariant">@color/background_secondary</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Material 次要颜色 -->
        <item name="colorSecondary">@color/accent_primary</item>
        <item name="colorSecondaryVariant">@color/accent_secondary</item>
        <item name="colorOnSecondary">@color/background_primary</item>

        <!-- Material 背景色 -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="android:windowBackground">@drawable/bg_main</item>

        <!-- 状态栏和导航栏 -->
        <item name="android:statusBarColor">@color/background_secondary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Material 文本颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Material 强调色 -->
        <item name="colorAccent">@color/accent_primary</item>
        
        <!-- 自定义主题属性 -->
        <item name="backgroundPrimary">@color/background_primary</item>
        <item name="backgroundSecondary">@color/background_secondary</item>
        <item name="backgroundCard">@color/background_card</item>
        <item name="backgroundSidebar">@color/background_sidebar</item>
        <item name="textPrimary">@color/text_primary</item>
        <item name="textSecondary">@color/text_secondary</item>
        <item name="textHint">@color/text_hint</item>
        <item name="dividerColor">@color/divider</item>
    </style>

    <!-- 全屏主题 -->
    <style name="FullScreenTheme" parent="Theme.raLaunch">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <!-- 忽略刘海屏设置 -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- 隐藏状态栏 -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>