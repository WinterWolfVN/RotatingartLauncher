<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 设置对话框样式 - Material 3 -->
    <style name="SettingsDialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- 运行时选择对话框样式 - Material 3 -->
    <style name="RuntimeDialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- 控件编辑对话框样式 - Material 3 -->
    <style name="ControlEditDialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <!-- 窗口宽度设置 -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <!-- 不使用硬编码颜色，直接继承父主题的颜色 -->
    </style>

    <!-- 对话框动画样式 -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- 圆角卡片样式 - Material 3 -->
    <style name="RoundedCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/backgroundCard</item>
    </style>

    <!-- 添加游戏对话框样式 -->
    <style name="AddGameDialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

        <!-- 继承主题颜色属性 - 直接映射到Material3标准属性，避免属性解析失败 -->
        <item name="backgroundPrimary">?android:attr/colorBackground</item>
        <item name="backgroundSecondary">?attr/colorSurfaceVariant</item>
        <item name="backgroundCard">?attr/colorSurface</item>
        <item name="textPrimary">?attr/colorOnSurface</item>
        <item name="textSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <!-- Widget 命名空间基础样式 -->
    <style name="Widget">
        <!-- 基础样式，用于命名空间 -->
    </style>

    <!-- Widget 命名空间基础样式 -->
    <style name="Widget.App" parent="Widget">
        <!-- 基础样式，用于命名空间 -->
    </style>

    <!-- Material 3 按钮样式 -->
    <style name="Widget.App.Button.Filled" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.Button.Elevated" parent="Widget.Material3.Button.ElevatedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="elevation">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Material 3 卡片样式 -->
    <style name="Widget.App.CardView.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.App.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
    </style>

    <!-- ShapeableImageView 圆形样式 -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ShapeableImageView 圆角样式 12dp -->
    <style name="RoundedImageView12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ShapeableImageView 圆角样式 16dp -->
    <style name="RoundedImageView16" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Material 3 图标按钮样式 - 统一工具栏按钮 -->
    <style name="Widget.App.Button.ToolbarIcon" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Material 3 卡片样式 - 标准卡片（带边框） -->
    <style name="Widget.App.CardView.Standard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
    </style>

    <!-- Material 3 卡片样式 - 小卡片 -->
    <style name="Widget.App.CardView.Small" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
    </style>

    <!-- Material 3 卡片样式 - 轻量卡片 -->
    <style name="Widget.App.CardView.Light" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- 文本样式 - 命名空间基础样式 -->
    <style name="TextAppearance">
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <!-- 文本样式 - 基础样式 -->
    <style name="TextAppearance.App" parent="TextAppearance">
        <item name="android:textColor">?attr/textPrimary</item>
    </style>

    <!-- 文本样式 - 主标题 -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.App">
        <item name="android:textColor">?attr/textPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 文本样式 - 副标题 -->
    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.App">
        <item name="android:textColor">?attr/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 文本样式 - 提示文本 -->
    <style name="TextAppearance.App.Hint" parent="TextAppearance.App">
        <item name="android:textColor">?attr/textHint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 文本样式 - 小文本 -->
    <style name="TextAppearance.App.Small" parent="TextAppearance.App">
        <item name="android:textColor">?attr/textSecondary</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- 文本样式 - 中等文本 -->
    <style name="TextAppearance.App.Medium" parent="TextAppearance.App">
        <item name="android:textColor">?attr/textPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 文本样式 - 大文本 -->
    <style name="TextAppearance.App.Large" parent="TextAppearance.App">
        <item name="android:textColor">?attr/textPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Material 3 卡片样式 - 列表项卡片（带边框） -->
    <style name="Widget.App.CardView.ListItem" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">?attr/backgroundCard</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/textSecondary</item>
    </style>

    <!-- Material 3 卡片样式 - 图标容器卡片 -->
    <style name="Widget.App.CardView.IconContainer" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Material 3 卡片样式 - 搜索框卡片 -->
    <style name="Widget.App.CardView.SearchBox" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/dividerColor</item>
        <item name="cardBackgroundColor">?attr/backgroundCard</item>
    </style>

    <!-- Material 3 卡片样式 - 路径显示卡片 -->
    <style name="Widget.App.CardView.PathDisplay" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">?attr/backgroundCard</item>
    </style>

    <!-- Material 3 卡片样式 - 文件列表卡片（带边框） -->
    <style name="Widget.App.CardView.FileList" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">?attr/backgroundCard</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/textSecondary</item>
    </style>

    <!-- Material 3 卡片样式 - 游戏卡片（带边框） -->
    <style name="Widget.App.CardView.GameItem" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/textSecondary</item>
    </style>

    <!-- Material 3 卡片样式 - 删除按钮卡片 -->
    <style name="Widget.App.CardView.DeleteButton" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>

    <!-- Material 3 卡片样式 - 图标卡片 -->
    <style name="Widget.App.CardView.Icon" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@android:color/white</item>
    </style>

    <!-- ImageButton 样式 - 基础样式 -->
    <style name="Widget.App.ImageButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- ImageButton 样式 - 返回按钮 -->
    <style name="Widget.App.ImageButton.Back" parent="Widget.App.ImageButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/textPrimary</item>
    </style>

    <!-- ImageButton 样式 - 工具栏按钮 -->
    <style name="Widget.App.ImageButton.Toolbar" parent="Widget.App.ImageButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- MaterialButton 样式 - 小图标按钮（44dp） -->
    <style name="Widget.App.Button.SmallIcon" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">20dp</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <!-- MaterialButton 样式 - 文本按钮（小图标） -->
    <style name="Widget.App.Button.TextIcon" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">20dp</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <!-- NavigationRailView 样式 - GitHub 风格 -->
    <style name="Widget.App.NavigationRailView" parent="Widget.Material3.NavigationRailView">
        <item name="itemIconTint">@color/navigation_rail_item_color</item>
        <item name="itemTextColor">@color/navigation_rail_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.NavigationRailView.ActiveIndicator</item>
    </style>

    <!-- NavigationRailView 激活指示器样式 -->
    <style name="Widget.App.NavigationRailView.ActiveIndicator" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.NavigationRail.Indicator</item>
    </style>

    <!-- NavigationRail 指示器形状 -->
    <style name="ShapeAppearance.App.NavigationRail.Indicator" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- GOG 对话框样式 - 透明背景 MD3 风格 -->
    <style name="GogDialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
        <!-- 移除所有默认装饰 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
