<?xml version="1.0" encoding="utf-8"?>
<!-- 通用选择对话框的选项项 -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/backgroundSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 选项图标（可选） -->
        <ImageView
            android:id="@+id/ivOptionIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ralib_bg_circle"
            android:backgroundTint="@color/accent_primary"
            android:padding="6dp"
            app:tint="?attr/backgroundCard"
            android:layout_marginEnd="12dp"
            android:visibility="gone" />

        <!-- 选项文本 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项名称"
                android:textColor="?attr/textPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOptionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项描述"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 选中标记 -->
        <ImageView
            android:id="@+id/ivCheckmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ralib_ic_check_circle"
            app:tint="@color/accent_primary"
            android:layout_marginStart="12dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

