<?xml version="1.0" encoding="utf-8"?>
<!-- 紧凑MD3风格颜色选择器 - 左右分栏布局 -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="?attr/colorSurface"
    style="@style/Widget.Material3.CardView.Elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选择主题颜色"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="关闭"
                app:tint="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- 左右分栏容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- 左侧：颜色显示和输入区域 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <!-- 颜色预览区域 - MD3风格：当前颜色 -> 选中颜色 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="?attr/colorSurfaceVariant"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    app:cornerRadius="16dp">

                    <!-- 当前颜色预览块（实时变化） -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/colorPreview"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#9C7AE8" />
                    </LinearLayout>

                    <!-- 箭头指向 -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ralib_ic_arrow_right"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- 选中颜色块（确定后的颜色） -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选中"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="11sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/selectedColorBlock"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#9C7AE8"
                            app:strokeWidth="2dp"
                            app:strokeColor="?attr/colorPrimary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- HEX输入 - MD3风格 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="true"
                    android:hint="十六进制"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvHexDisplay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="#9C7AE8"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="false"
                            android:textColor="?attr/colorOnSurface" />

                        <ImageButton
                            android:id="@+id/btnCopyHex"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_content_copy"
                            android:contentDescription="复制"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- RGB输入 - MD3风格 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="true"
                    android:hint="RGB"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tvRgbDisplay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="156, 122, 232"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="false"
                            android:textColor="?attr/colorOnSurface" />

                        <ImageButton
                            android:id="@+id/btnCopyRgb"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_content_copy"
                            android:contentDescription="复制"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- 右侧：颜色选择器 -->
            <com.app.ralib.ui.ColorPickerView
                android:id="@+id/colorPicker"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_weight="1.2" />
        </LinearLayout>

        <!-- 底部按钮 - 确保可见 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="取消"
                android:minWidth="120dp"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="确定"
                android:minWidth="120dp"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
